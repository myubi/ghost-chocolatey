{{!< default}}
<main role="main">
{{#author}}
  <article role="article" itemscope itemtype="http://schema.org/Article">
<section class="author-profile">
  {{#if image}}
  <img class="profile-pic" src="{{image}}" />
{{/if}}
  <h1>{{name}}</h1>
  {{#if bio}}<p>{{bio}}</p>{{/if}}
  {{#if location}}<p>{{location}}</p>{{/if}}
  {{#if website}}<p>{{website}}</p>{{/if}}
    {{#if twitter}}<p>{{twitter}}</p>{{/if}}
</section>
</article>
{{/author}}
</main>

{{!< default}}
<main role="main">
{{#author}}
  <article role="article" itemscope itemtype="http://schema.org/Article">
<section class="author-profile">

  {{#if image}}
    <div class="author-side">
  <img class="profile-pic" src="{{image}}" />
  </div>
{{/if}}
<div class="author-info">
  <h1>{{name}}</h1>
  {{#if bio}}<p>{{bio}}</p>{{/if}}
  <p>
  {{#if location}}<span><i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}</span>{{/if}}
  {{#if website}}<span><i class="fa fa-link" aria-hidden="true"></i> <a href="{{website}}">{{website}}</a></span>{{/if}}
    {{#if twitter}}<span><i class="fa fa-twitter" aria-hidden="true"></i> <a href="{{twitter_url}}">{{twitter}}</a></span>{{/if}}
    {{#if facebook}}<span><i class="fa fa-facebook" aria-hidden="true"></i> <a href="{{facebook_url}}">{{facebook}}</a></span>{{/if}}
  </p>
</div>
</section>
</article>
{{/author}}
</main>

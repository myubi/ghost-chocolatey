{{!< default}}
<main role="main">
{{#author}}
  <article role="article" itemscope itemtype="http://schema.org/Article">
<section class="author-profile">
  <div class="author-side">
  {{#if image}}
  <img class="profile-pic" src="{{image}}" />
{{/if}}
</div>
  <h1>{{name}}</h1>
  {{#if bio}}<p>{{bio}}</p>{{/if}}
  <p class="author-info">
  {{#if location}}<span><i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}</span>{{/if}}
  {{#if website}}<span><a href="{{website}}"><i class="fa fa-link" aria-hidden="true"></i> {{website}}</a></span>{{/if}}
    {{#if twitter}}<span><a href="{{twitter_url}}"><i class="fa fa-twitter" aria-hidden="true"></i> {{twitter}}</a></span>{{/if}}
    {{#if facebook}}<span><a href="{{facebook_url}}"><i class="fa fa-facebook" aria-hidden="true"></i> {{facebook}}</a></span>{{/if}}
  </p>
</section>
</article>
{{/author}}
</main>

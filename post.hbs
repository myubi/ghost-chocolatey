{{!< default}}
<main role="main">
  {{#post}}
  <article role="article" itemscope itemtype="http://schema.org/Article">
  <div>
    <h3 class="post-title">{{title}}</h3>
    {{#if image}}
      <img src="{{image}}" />
    {{/if}}
  </div>
  <div class="post-info">
  <div>
  <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
    <h4 class="left grey-text"><i class="fa fa-clock-o green-icon" aria-hidden="true"></i> {{date format='dddd, DD, MMMM YYYY'}}</h4>
  </time>
  </div>
  {{#if tags}}
  <div class="right post-tags">
    <h4>
      <i class="fa fa-tags green-icon" aria-hidden="true"></i>
      {{tags separator=" / "}}
    </h4>
  </div>
  {{/if}}
</div>

  <div class="content">
    {{content}}
  </div>
<div class="left">
  {{#author}}
  <span>By <a href="{{url}}">{{name}}</a></span>
  {{/author}}
</div>
<div class="right">
  <section class="share">
    <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <i class="fa fa-twitter"></i><span class="hidden">Tweet</span>
    </a>
    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <i class="fa fa-facebook"></i><span class="hidden">Share</span>
    </a>
    <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <i class="fa fa-google-plus"></i><span class="hidden">+1</span>
    </a>
</section>
</div>

</article>
  {{/post}}
</main>
